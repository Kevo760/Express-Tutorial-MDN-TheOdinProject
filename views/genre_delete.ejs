<!DOCTYPE html>
<html>
    <%-  include('./partials/head.ejs')%>
  <body>
    <!-- Sidebar -->
    <%-  include('./partials/sidebar.ejs')%>
    <div class="content-page">
        <h1><%= title %>: <%= genre.name %></h1>
        <% if (genre_books.length) { %>
            <b>Delete the following books before attempting to delete this genre.</b>
            <div style='margin-left:20px;margin-top:20px'>
                <h4>Books</h4>
                <dl>
                    <% genre_books.forEach(book => { %>
                        <dt>
                            <a href="<%= book.url %>">
                                <%= book.title %>
                            </a>
                        </dt>
                        <dd>
                            <%= book.summary %>
                        </dd>
                    <% }) %>
                </dl>
            </div>
        <% } else {%>
            <p>Do you really want to delete this Genre?</p>
            <form method="POST" action="">
                <div class="form-group">
                  <input class="form-control" id="genreid" type="hidden" name="genreid" required="true" value="<%= genre._id %>"/>
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
              </form>
        <% } %>
    </div>
  </body>
</html>