<!DOCTYPE html>
<html>
    <%-  include('./partials/head.ejs')%>
  <body>
    <!-- Sidebar -->
    <%-  include('./partials/sidebar.ejs')%>
    <div class="content-page">
        <h1><%= title %>: <%= author.name %></h1>
        <p><%= author.date_of_birth_formatted %> - <%= author.date_of_death_formatted %></p>
        <% if (author_books.length) { %>
            <b>Delete the following books before attempting to delete this author.</b>
            <div style='margin-left:20px;margin-top:20px'>
                <h4>Books</h4>
                <dl>
                    <% author_books.forEach(book => { %>
                        <dt>
                            <a href="<%= book.url %>">
                                <%= book.title %>
                            </a>
                        </dt>
                        <dd>
                            <%= book.summary %>
                        </dd>
                    <% }) %>
                </dl>
            </div>
        <% } else {%>
            <p>Do you really  want to delete this Author?</p>
            <form method="POST" action="">
                <div class="form-group">
                  <input class="form-control" id="authorid" type="hidden" name="authorid" required="true" value="<%= author._id %>"/>
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
              </form>
        <% } %>
    </div>
  </body>
</html>